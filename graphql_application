apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: graphqlminikube
  namespace: argocd

spec:
  destination:
    server: https://kubernetes.default.svc
    namespace: minikube-cluster
    
  project: default
  source:
    repoURL: https://github.com/amadouth6/argocd.git
    targetRevision: minikube-cluster
    path: swh-graphql/
    helm:
      releaseName: graphqlminikube
      valueFiles:
        - myvalues.yaml

  syncPolicy:
    syncOptions:
      - CreateNamespace=true    
    
    automated:
      selfHeal: true
      prune: true
